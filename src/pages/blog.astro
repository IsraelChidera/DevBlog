---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Container from "../components/widget/Container";

const allPosts = await Astro.glob('../pages/posts/*.md');
const blogTitle = "What is your blog ";
const blogDescription = `What should be your blog description for instance
    Learn about cryptocurrency, NFTs, and blockchain, discover our latest 
    product updates, partnership announcements, user stories, and more.`;
---

<BaseLayout title="Welcome to Astro.">
    <main>
        <header>
            <Container className="py-3 ">
                <div class="w-[521px] text-center">
                    <h1 class="text-2xl lg:text-3xl font-bold text-primary">
                        {blogTitle} Blog
                    </h1>

                    <p class="mt-2 text-primary lg:text-lg opacity-60">
                        Home | blog
                    </p>
                </div>

                <div class="my-6">
                    {allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
                </div>
            </Container>
        </header>
    </main>
</BaseLayout>
