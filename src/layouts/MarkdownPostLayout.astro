---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
    <div class="flex justify-center items-center">
        <div class="py-10 lg:px-0 px-3 flex justify-center items-center">
            <div>
                <div class="flex text-primary justify-end mb-6">
                    <a href="/blog" class="flex items-center space-x-2">
                        <svg
                            class="w-[16px] h-[16px] text-"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 448 512"
                        >
                            <path                                
                                d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"
                            ></path>
                        </svg>
                        <p>back</p>
                    </a>
                </div>

                <div class="pb-4 text-center ">
                    <p>{frontmatter.pubDate.slice(0, 10)}</p>
                    <h1
                        class="text-primary font-semibold text-[32px] md:text-5xl"
                    >
                        {frontmatter.title}
                    </h1>
                </div>

                <div class="mt-2 pb-6 flex items-center justify-center">
                    <img
                        src={frontmatter.image.url}                        
                        alt={frontmatter.image.alt}
                        class="sm:w-full"
                    />
                </div>

                <p class="border-b border-b-primary pb-1 mb-5">
                    By {frontmatter.author}
                </p>

                <div
                    class=" prose-headings:text-primary prose-bold:text-primary prose-code:text-primary prose-strong:text-primary prose-a:underline prose-a:text-primary text-primary prose lg:prose-xl"
                >
                    <slot />
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
